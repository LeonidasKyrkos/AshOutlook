<Window x:Class="AshOutlook.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ash's personal email program thing" Height="239" Width="525">
    <Grid Margin="0,0,0,-4">
        <Button x:Name="browsebtn" Content="Browse" HorizontalAlignment="Left" Margin="366,73,0,0" VerticalAlignment="Top" Width="75" Click="browsebtn_Click"/>
        <TextBox x:Name="filepathtxt" HorizontalAlignment="Left" Height="23" Margin="66,72,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="277"/>
        <TextBox x:Name="recipienttxt" HorizontalAlignment="Left" Height="21" Margin="66,117,0,0" TextWrapping="Wrap" Text="Enter recipient email address" VerticalAlignment="Top" Width="277" GotFocus="recipienttxt_GotFocus"/>
        <Button x:Name="send" Content="Send" HorizontalAlignment="Left" Margin="366,117,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="-0.573,-0.909" Click="send_Click"/>

    </Grid>
</Window>
